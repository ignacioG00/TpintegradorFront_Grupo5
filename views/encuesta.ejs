<%- include('layouts/header') %>

<section class="encuesta">
  <h2>¿Cómo fue tu experiencia?</h2>
  
  <form id="formEncuesta" enctype="multipart/form-data" method="POST" action="/encuesta">
    <label for="comentario">Comentario:</label>
    <textarea id="comentario" name="comentario" required></textarea>

    <label for="email">Email:</label>
    <input type="email" name="email" required />

    <label>
      <input type="checkbox" name="volveria" />
      ¿Volverías a usar este autoservicio?
    </label>

    <label for="puntuacion">Puntaje del servicio:</label>
    <input type="range" name="puntuacion" min="1" max="10" />

    <label for="foto">¿Querés subir una imagen?</label>
    <input type="file" name="foto" accept="image/*" />

    <button type="submit">Enviar opinión</button>
    <button type="button" onclick="omitirEncuesta()">Omitir</button>
  </form>
</section>

<script>
  function omitirEncuesta() {
    window.location.href = '/';
  }

  document.getElementById('formEncuesta')?.addEventListener('submit', (e) => {
    alert("¡Gracias por tu opinión!"); // este sería reemplazado por un modal real
  });
</script>

<%- include('layouts/footer') %>
